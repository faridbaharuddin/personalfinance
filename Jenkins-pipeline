pipeline {
	agent any
	stages {
		stage ('Retrieve updates from Github') {
			steps {
				git 'https://github.com/faridbaharuddin/personalfinance.git'
			}
		}
		stage ('Run server') {
			steps {
				virtualenv venv --distribute
				. venv/bin/activate
				pip install Flask
				python start-app.py
			}
		}
	}
}